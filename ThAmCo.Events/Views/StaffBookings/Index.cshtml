@model IEnumerable<ThAmCo.Events.Data.StaffBooking>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StaffInfo.FirstName) @Html.DisplayFor(modelItem => item.StaffInfo.Surname)
            </td>
            <td>
                <a asp-area="" asp-route-id="@item.EventId" asp-controller="Events" asp-action="Details">@Html.DisplayFor(modelItem => item.Event.Title)</a>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.EventId, id2 = item.StaffId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EventId, id2 = item.StaffId })
            </td>
        </tr>
}
    </tbody>
</table>
